@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PhoneStore.ViewModels.CreatePhoneViewModel

@{

    ViewBag.Title = "Добавить устройство";

    Layout = "_Layout";

}

<h2>Заполните форму для добавления устройства</h2>

<div class="row">

<div class="phone_add_form col-md-6">

    <form asp-action="Add" method="post">

        <div class="row">
            <div class="col-md-6">
                <p class="text-danger fs-5">@ViewBag.Error</p>
                <div class="form-group mb-3">
                    <select class="form-select" asp-for="@Model.BrandId">
                        <option selected value="0">Выберите бренд</option>
                        @foreach (var brand in @Model.Brands)
                        {
                            <option value="@brand.Id">@brand.Name</option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="BrandId"></span>
                </div>

                <div class="form-group mb-3">

                    <label for="title" class="mb-2">Наименование</label>

                    <input asp-for="Title"
                           type="text"
                           class="form-control"
                           id="title"
                           placeholder="Наименование устройства">
                </div>
                <span asp-validation-for="Title"></span>

                <div class="form-group mb-3">

                    <label for="price" class="mb-2">Стоимость</label>

                    <input
                        asp-for="Price"
                        type="text"
                        class="form-control"
                        id="price"
                        placeholder="Стоимость устройства">
                </div>
                <span asp-validation-for="Price"></span>
                <button type="submit" class="btn btn-info mt-3">Создать</button>
            </div>
        </div>
    </form>
</div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
