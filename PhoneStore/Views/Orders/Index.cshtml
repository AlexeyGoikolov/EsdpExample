@model List<Order>

@{
    ViewBag.Title = "Заказы";
    Layout = "_Layout";
}

<div class="text-center">

    <h2>Заказы</h2>

</div>

<div class="table_section">

    @if (Model.Count == 0)

    {
        <p>Заказов еще нет</p>
    }

    else

    {
        <table class="table" style="width: 100%;">

            <tr>

                <th>Id</th>

                <th>Имя</th>

                <th>Адрес</th>

                <th>Контактный телефон</th>
                <th>Модель телефона</th>

            </tr>

            @foreach (var order in @Model)

            {
                <tr>

                    <td>@order.Id</td>

                    <td>@order.Name</td>

                    <td>@order.Address</td>

                    <td>@order.ContactPhone</td>
                    <td>@order.Phone.Brand @order.Phone.Title</td>

                </tr>
            }

        </table>
    }

</div>
